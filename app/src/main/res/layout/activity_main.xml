<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="#E8E8E8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Logo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/translateLight"
                android:contentDescription="@string/app_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Language Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- From Language Spinner -->
            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/fromLanguageSpinner"
                android:layout_marginEnd="8dp" />

            <!-- Translate Icon -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/translateLight"
                android:contentDescription="@string/arrows_icon"
                android:layout_marginEnd="8dp"/>

            <!-- To Language Spinner -->
            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/toLanguageSpinner"
                />
        </LinearLayout>

        <!-- Microphone Icon -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/microphone"
            android:contentDescription="@string/microphone_icon"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Text Input Field -->


        <!-- Down Arrow Icon -->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:hint="@string/input_hit"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="5" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrowDown"
            android:contentDescription="@string/down_arrow_icon"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Translated Text Display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="@string/translated_text"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
